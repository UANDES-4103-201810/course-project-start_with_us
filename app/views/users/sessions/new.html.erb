<div class="login_section animated bounceInDown">
  <p style="color: #B00100" id="notice"><%= notice %></p>
<h2 style="color: white">Log In</h2>
<%= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, style: "color:white;" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, style: "color:white;" %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style: "color:white;" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-success" %>
  </div>

<% end %>

<%= render "users/shared/links" %>
</div>
