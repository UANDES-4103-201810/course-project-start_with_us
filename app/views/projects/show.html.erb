<p id="notice"><%= notice %></p>
<div class="project_view">
  <div class="my_row">
    <p>
    <h2><%= @project.title %></h2>

    </p>
  </div>
  <% if @content %>
    <div class="my_row">
      <p>
        <strong>Image:</strong>
        <img src="<%= @content.image.url(:thumb) %>">
      </p>
    </div>
  <% end %>
  <div class="my_row">
    <p>
      <strong style="text-align: center">Project Owner</strong> <br/>
      <%= link_to @project.user[:email], '/profile/' + @project.user_id.to_s %>
    </p>
  </div>
  <div class="my_row">
    <p>
      <strong>Description:</strong>
    <div><%= @project.description %></div>
    </p>
  </div>
  <div class="my_row">
    <p>
      <strong>Goal Amount: $</strong>
      <%= @project.goal_amount %>
    </p>
  </div>


  <div class="my_row">
    <p>
      <strong>Delivery Date: </strong>
      <%= @project.delivery_date %>
    </p>
  </div>

</div>
<div class="promises_view">
  <div class="my_row">
    <strong>Promises</strong>
  </div>
  <% counter = 0 %>
  <% @project.promises.each do |promise| %>

   <% if counter == 0 %>
    <div class="my_row_promises">
   <% else %>
      <div class="my_row_promises" hidden>
   <% end %>
      <div style="width: 15%;margin-left: 50%;margin-top: 5px;position: absolute;">Price:
        <%= promise.price %>
      </div>
      <div style="width: 15%;margin-left: 50%;margin-top: 25px;position: absolute;">Quantity:
        <%= promise.quantity %>
      </div>
      <% value = 0 %>
      <% promise.items.each do |item| %>
        <% if value == 0 %>
          <div style="width: 350px;margin-left: 32%;height: 200px; position: absolute;">
        <% else %>
          <div style="width: 100px;height: 100%;position: absolute;" hidden>
        <% end %>
        <% value += 1 %>
        <img style="height: 70%;width: 80px;position: absolute" src="<%= item.multimedia_content.image %>">
        <span style="position: absolute;margin-left: 90px;">Item: <%= item.name %></span><br/>
        <span style="position: absolute;margin-left: 90px;width: 130px">Description:<br/> <%= item.description %></span>
        </div>
      <% end %>
      <div style="width: 30%;position: absolute">
        <%= promise.description %>
      </div>

      </div>
    <% counter += 1 %>
  <% end %>

  <%= link_to 'Back', projects_path, class: "btn btn-danger" %>
  </div>
</div>